#!/usr/bin/xonsh
control_lines = $(cat src/DEBIAN/control).split('\n')
major, minor, micro = control_lines[1].split()[1].split('.')
micro = str(int(micro) + 1)
control_lines = [control_lines[0], f"Version: {major}.{minor}.{micro}", *control_lines[2:]]
echo -n @("\n".join(control_lines)) | tee src/DEBIAN/control

dpkg-deb --build src
name = f"eros-{major}.{minor}.{micro}.deb"
mv src.deb @(name)
sudo dpkg -i @(name)